<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <github.chenupt.springindicator.SpringIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicator"
        android:contextClickable="false"
        android:onClick="abc"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:siTextColor="@color/colorPrimaryDark"
        app:siSelectedTextColor="@android:color/black"
        app:siIndicatorColor="@color/colorPrimary"
        app:siIndicatorColors="@array/A700"
        app:siTextSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/CompleteGameViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="12dp" />

</LinearLayout>