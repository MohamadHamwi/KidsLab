            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="1.5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="367dp" />
    </LinearLayout>

